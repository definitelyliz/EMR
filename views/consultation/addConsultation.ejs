<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Consultation Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index-style.css">
    <link rel="stylesheet" href="/css/add-consultation.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/b68b4fe106.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="fixed">
        <!-- HEADER PARTIAL -->
        <!-- <%- include('../partials/header') %> -->
        <!-- END HEADER PARTIAL -->
    </div>

    <div class="content">
        <h1>ADD CONSULTATION</h1>
        <div class="container">

            <form action="/patient/<%=patientId%>" method="post">

                <div class="today">
                    <label for="date">Date: </label>
                    <input id="date" type="date" name="date"> Edit Date
                    <script>
                        var field = document.querySelector('#date');
                        var date = new Date();
                        // Set the date
                        field.value = date.getFullYear().toString() + '-' + (date.getMonth() + 1).toString().padStart(2, 0) +
                            '-' + date.getDate().toString().padStart(2, 0)
                    </script>
                </div>


                <div class="consultation-details">

                    <div class="input-box">
                        <span class="details">Subjective Findings</span>
                        <textarea id="subjective" name="subjective" cols="30" rows="10" class="subjective"
                            required></textarea>
                        <div id="subjCont"></div>
                        <div class="plan">
                            <button id="subjBtn" class="btn" type="button" id="plus"><i
                                    class="fa-solid fa-circle-plus"></i></button>
                            <button id="subjMinus" class="btn" type="button"><i
                                    class="fa-solid fa-circle-minus"></i></button>
                        </div>


                    </div>

                    <div class="input-box">
                        <span class="details">Assessment</span><textarea id="assessment" name="assessment" cols="30"
                            rows="10" class="assessment" required></textarea>
                        <div id="assessCont"></div>
                        <div class="plan">
                            <button id="assessBtn" class="btn" type="button" id="plus"><i
                                    class="fa-solid fa-circle-plus"></i></button>
                            <button id="assessMinus" class="btn" id="minus" type="button"><i
                                    class="fa-solid fa-circle-minus" type="button"></i></button>
                        </div>

                    </div>

                    <div id="objf" class="input-box">
                        <span class="details">Objective Findings</span><textarea id="objective" name="objective"
                            cols="30" rows="10" class="objective" required></textarea>
                        <div id="objCont"></div>
                        <div class="plan">
                            <button id="objBtn" class="btn" type="button" id="plus"><i
                                    class="fa-solid fa-circle-plus"></i></button>
                            <button id="objMinus" class="btn" id="minus" type="button"><i
                                    class="fa-solid fa-circle-minus" type="button"></i></button>
                        </div>

                    </div>

                    <div class="input-box">
                        <span id="plan-label" class="details" style="display: inline">Plan</span>
                        <div class="plan">
                            <!-- <span class="details" style="display: inline">Plan</span><br> -->
                            <select id="opt" name="category">
                                <option value="Medications">Medications</option>
                                <option value="Laboratory">Laboratory</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                        <textarea id="plan" name="plandescription" class="planText" required></textarea>
                        <div id="planCont"></div>
                        <div class="plan">
                            <button id="planBtn" class="btn" type="button" id="plus"><i
                                    class="fa-solid fa-circle-plus"></i></button>
                            <button id="planMinus" class="btn" id="minus" type="button"><i
                                    class="fa-solid fa-circle-minus" type="button"></i></button>
                        </div>

                    </div>

                    <!--
                        for uploaded file display 
                        <div class="showfilebox">
                            <div class="left">
                                <h3>filename.file</h3>
                            </div>

                            <div class="right">
                                <span>&#215;</span>
                            </div>
                            
                        </div>
                        -->



                </div>
                <div class="button">
                    <input type="submit" id="sub1" value="SAVE">

                </div>
            </form>

            <form action="/patient/<%=patientId%>">
                <div class="button">
                    <input type="submit" id="sub2" value="CANCEL">
                </div>
            </form>

        </div>


    </div>
</body>

<script src="/js/editConsult.js"></script>

</html>