<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Patient</title>
    <link rel="stylesheet" href="/css/add-patient.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/b68b4fe106.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <div class="title">Add Patient</div>
        <form action="/patient" method="post" autocomplete="off" id="addPatientPage">
            <div class="user-details">

                <!-- NEW FT : FULL NAME -->
                <div class="input-box1">
                    <span class="details">Last Name</span>
                    <input type="text" name="lastName" autocomplete="off" readonly
                        onfocus="this.removeAttribute('readonly');" required>
                </div>

                <div class="input-box1">
                    <span class="details">First Name</span>
                    <input type="text" name="firstName" autocomplete="off" required>
                </div>

                <div class="input-box1">
                    <span class="details">Middle Name</span>
                    <input type="text" name="middleName" autocomplete="off" required>
                </div>

                <div class="input-box">
                    <label for="gender" class="details">Sex</label>
                    <select name="gender" id="opt">
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>
                    </select>
                </div>

                <!-- NEW FT : BLOODTYPE -->
                <div class="input-box">
                    <label for="bloodType" class="details">Blood Type</label>
                    <select name="bloodType">
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                </div>

                <div class="input-box">
                    <span class="details">Address</span>
                    <input type="text" name="address" autocomplete="off" required>
                </div>

                <div class="input-box">
                    <span class="details">Contact Details</span>
                    <input type="text" id="contactNumber" name="contactNumber" autocomplete="off" required
                        minlength="11" maxlength="11">
                    <span id="error"></span>
                </div>

                <div class="input-box">
                    <span class="details">Birthday</span>
                    <input type="text" placeholder="MM/DD/YYYY" onfocus="(this.type='date')" name="birthday" required>
                </div>

                <div class="input-box">
                    <span class="details">Occupation</span>
                    <input type="text" name="occupation" autocomplete="off" required>
                </div>


                <div class="input-box2">
                    <span class="details">Referred by</span>
                    <input type="text" name="referral" autocomplete="off" required>
                </div>

                <!-- NEW FT : MEDICAL HISTORY -->
                <div class="input-box2">
                    <span class="details">Medical History</span>
                    <br>
                    <!-- ADD LOOP HERE -->
                    <input type="text" id="medicalHistory" name="medicalHistory" class="medicalHistory" autocomplete="off" required>
                    <div id="medHisCont"></div>
                    <div class="plan">
                        <button id="medHisBtn" class="btn" type="button" id="plus"><i
                                class="fa-solid fa-circle-plus"></i></button>
                        <button id="medHisMinus" class="btn" type="button"><i
                                class="fa-solid fa-circle-minus"></i></button>
                    </div>
                </div>

            </div>

            <div class="button">
                <input type="submit" id="sub1" value="SAVE">
            </div>
        </form>
        <form action="/">
            <div class="button">
                <input type="submit" id="sub2" value="CANCEL">
            </div>
        </form>


        </form>

    </div>

</body>

<script src="/js/editPatient.js"></script>

</html>